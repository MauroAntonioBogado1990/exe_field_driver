<odoo>
    <record id="view_order_form_inherit_exe_field_driver" model="ir.ui.view">
        <field name="name">sale.order.form.exe.field.driver</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="exe_field_driver"/>
            </xpath>
        </field>
    </record>
</odoo>
